---
import "@/layouts/layout.css";
import Header from "./Header.astro";
---

<!doctype html>
<html lang="id" class="theme-dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Peskom</title>
  </head>
  <body class="transition-all duration-300 ease-in-out">
    <Header />
    <!-- offset -->
    <div
      class="h-[var(--layout-offset-height)] max-md:h-[calc(var(--layout-offset-height)*0.6)]"
    >
    </div>
    <div class="grid grid-cols-[1fr_minmax(auto,880px)_1fr] gap-4">
      <main class="col-start-2">
        <slot />
      </main>
    </div>
  </body>
</html>
