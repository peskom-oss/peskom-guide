---
import { getCollection } from "astro:content";
import { SEO } from "astro-seo";

import { CoreLayout } from "../layouts/CoreLayout";
import { FacebookIcon, GithubIcon } from "../components/Icon";
import { GuideCard } from "../components/GuideCard";

const categories = await getCollection("categories");

const meta = {
  title:
    "Panduan Belajar Programming untuk Mahasiswa & Lulusan IT yang Gak Bisa Ngoding",
};
---

<CoreLayout {...meta}>
  <SEO
    title="Panduan belajar pemrograman dan IT untuk sarjana komedi"
    description="Tutorial panduan belajar pemrograman frontend & animasi web, backend, system, dan devops untuk para sarjana komedi dan lulusan IT yang gak bisa ngoding"
  />
  <div
    class="grid grid-cols-[1fr_minmax(auto,880px)_1fr] gap-x-4 gap-y-14 items-stretch"
  >
    <!-- hero section -->
    <div class="col-start-2">
      <h1
        class="font-bold text-3xl leading-normal tracking-[-0.3px] text-text-secondary"
      >
        <span class="text-text-primary">
          Dari sarjana komedi, oleh sarjana komedi, untuk sarjana komedi
        </span>
        <p>
          Website yang didedikasikan untuk memberikan panduan pemrograman bagi
          mahasiswa dan lulusan IT gak bisa ngoding tapi jujur masih mau belajar
          ngoding!
        </p>
      </h1>
      <div class="mt-3 flex gap-2">
        <!-- <a
          href="https://www.facebook.com/groups/sarjana.komedi"
          target="_blank"
          class="no-underline"
        >
          <button
            class="bg-emphasis text-accent font-medium px-3 py-2 rounded-md flex items-center gap-2"
          >
            sarjana.komedi
            <FacebookIcon />
          </button>
        </a> -->
        <a
          href="https://github.com/peskom-oss"
          target="_blank"
          class="no-underline"
        >
          <button
            class="bg-emphasis text-accent font-medium px-3 py-2 rounded-md flex items-center gap-2 cursor-pointer"
          >
            peskom-oss
            <GithubIcon />
          </button>
        </a>
      </div>
    </div>

    <!-- guides section -->
    <section class="col-start-2 flex flex-col gap-5 py-10">
      <h2
        class="font-semibold text-2xl leading-normal tracking-[-0.3px] text-text-primary"
      >
        Programming guides
      </h2>

      <ul class="flex flex-col gap-6 items-stretch">
        {
          categories.map((category) => (
            <li class="list-none">
              <a
                href={category.data.link}
                class="no-underline text-text-secondary"
              >
                <GuideCard
                  name={category.data.name}
                  description={category.data.description}
                />
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </div>
</CoreLayout>
